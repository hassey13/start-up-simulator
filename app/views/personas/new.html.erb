<div style="width: 100%; height: 50px;">

  <h3>Logged in as: <%= current_user.first_name %></h3>

  <%= form_tag logout_path, method: :delete do %>
    <%= submit_tag "Logout" %>
  <% end %>

  <%= link_to "Back to User", current_user %>

</div>

<% if flash[:notice] %>
  <div class="flash">
    <p><%= flash[:notice] %></p>
  </div>
<% end %>

<br>

<h1>Create Persona</h1>
<%= form_for @persona do |f| %>
  <%= f.label :name %>
  <br>
  <%= f.text_field :name %>
  <br><br>
  <%= f.submit "Create Persona" %>
<% end %>
<br><br>

<h1>Sign in:</h1>
<%= form_tag '/personas_sessions', method: :post do %>
<%=  select("persona", "name", User.find(current_user.id).personas.collect {|p| p.name}, {include_blank: true}) %>
<br><br>
<%= submit_tag 'Log in' %>
<% end %>
